{
  "name": "split-money",
  "version": "1.3.2",
  "description": "Splitwise clone - Expense splitting and management built with React PWA",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:all": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:html": "HTML_REPORT=1 playwright test",
    "lighthouse": "bash scripts/run-lighthouse.sh",
    "lighthouse:url": "bash scripts/run-lighthouse.sh",
    "test:deployment": "bash scripts/test-deployment.sh",
    "prepare": "node -e \"try { require('husky').install() } catch (e) { if (process.env.CI || process.env.VERCEL) { process.exit(0) } else { throw e } }\" || true",
    "install-protection": "bash scripts/install-git-protection.sh",
    "init-enforcement-lock": "bash scripts/validate-enforcement-lock.sh",
    "unlock-enforcement": "bash scripts/unlock-enforcement.sh",
    "version:set": "bash scripts/version-utils.sh && bash -c 'set_version $1' _",
    "version:major": "bash scripts/bump-version.sh major",
    "version:minor": "bash scripts/bump-version.sh minor",
    "version:patch": "bash scripts/bump-version.sh patch",
    "test:all": "bash scripts/run-all-tests.sh",
    "test:lock": "bash scripts/lock-test.sh",
    "test:unlock": "bash scripts/unlock-test.sh",
    "test:validate-locks": "bash scripts/validate-test-locks.sh",
    "doc:lock": "bash scripts/lock-doc.sh",
    "doc:unlock": "bash scripts/unlock-doc.sh",
    "doc:validate-locks": "bash scripts/validate-doc-locks.sh",
    "pre-deploy": "bash scripts/pre-deployment-check.sh",
    "release:check": "bash scripts/check-release-qualification.sh",
    "release:coverage": "bash scripts/check-test-coverage.sh",
    "release:map": "bash scripts/map-locked-test-coverage.sh",
    "release:manage": "bash scripts/manage-release-branch.sh",
    "release:protect": "bash scripts/protect-release-branch.sh"
  },
  "keywords": [
    "react",
    "pwa",
    "typescript",
    "splitwise",
    "expense-splitting",
    "vite"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.5",
    "@mui/material": "^7.3.5",
    "@tanstack/query-async-storage-persister": "^5.90.9",
    "@tanstack/react-query": "^5.90.7",
    "@tanstack/react-query-persist-client": "^5.90.9",
    "autoprefixer": "^10.4.21",
    "date-fns": "^2.30.0",
    "formik": "^2.4.8",
    "localforage": "^1.10.0",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.20.0",
    "recharts": "^3.5.1",
    "tailwindcss": "^3.4.13",
    "yup": "^1.7.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "playwright": "^1.56.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.6.0",
    "workbox-window": "^7.0.0"
  }
}
